# Created with antsibull-docs @{ antsibull_docs_version }@
# cspell: disable cprv

set -e

pushd "$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
trap "{ popd; }" EXIT

# As rsync might be missing in places like RTD build system, we make it optional
copy_dirs() {
    local src_dir="$1"
    local dest_dir="$2"

    # Check if rsync is installed
    if command -v rsync &> /dev/null; then
        rsync -cprv --delete-after "$src_dir" "$dest_dir"
    else
        cp -pr "$src_dir" "$dest_dir"
    fi
}

# Create collection documentation into temporary directory
rm -rf temp-rst
mkdir -p temp-rst
chmod og-w temp-rst  # antsibull-docs wants that directory only readable by itself
antsibull-docs \
    --config-file antsibull-docs.cfg \
{% if use_current %}
{%   if collections | length > 0 %}
    collection \
{%     if fail_on_error %}
    --fail-on-error \
{%     endif %}
    --use-current \
{%     if squash_hierarchy %}
    --squash-hierarchy \
{%     endif %}
    --dest-dir temp-rst \
    @{ ' '.join(collections) }@
{%   else %}
    current \
{%     if fail_on_error %}
    --fail-on-error \
{%     endif %}
    --dest-dir temp-rst
{%   endif %}
{% else %}
    collection \
{%     if fail_on_error %}
    --fail-on-error \
{%     endif %}
{%     if collection_version != '@latest' %}
    --collection-version @{ collection_version }@ \
{%     endif %}
{%     if squash_hierarchy %}
    --squash-hierarchy \
{%     endif %}
    --output-format @{ output_format }@ \
    --dest-dir temp-rst \
    @{ ' '.join(collections) }@
{% endif %}

# Copy collection documentation into source directory
{% if squash_hierarchy %}
copy_dirs temp-rst/ rst/
{% else %}
copy_dirs temp-rst/collections/ rst/collections/
{% endif %}

# Build Sphinx site
{% if lenient %}
sphinx-build -M html rst build -c .
{% else %}
sphinx-build -M html rst build -c . -W --keep-going
{% endif %}
